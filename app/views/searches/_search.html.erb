<%= form_for @search do |f| %>

  <div>
    <%= f.label :keywords, "Enter a city or zip code:" %>
    <br />
    <%= f.text_field :keywords, class: 'form-control' %>
  </div>

  <br />

  <div>
    <%= f.label :category_id, "What are you interested in?" %>
    <br />
    <%= f.collection_select :category_id, Category.order(:title), :id, :title, {include_blank: 'All'}, class: 'form-control'  %>
  </div>

  <br />

  <div>
    <%= f.label :distance, "How far are you willing to travel? (in miles)" %><br />
    <%= f.text_field :distance, class: 'form-control' %>
  </div>

  <br />

  <%= button_tag(type: 'submit', class: 'btn btn-default') do %>
    Search
  <% end %>

<% end %>

<br />
